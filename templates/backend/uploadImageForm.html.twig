{% extends 'backend/base.html.twig' %}

{% block content %}
    {% set alertTypeAvailable = ['success', 'failure'] %}
    {% for alert in alertTypeAvailable %}
        {% for message in app.session.getFlashBag.get(alert) %}
            <div class="card-panel teal lighten-2">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

        {# upload image form #}
        <form enctype="multipart/form-data" class="container col m6 s12" action="" method="post">
            <h4>Upload a cover here</h4>
            {{ form_errors(form) }}
            <div class="row">
                <div class="file-field input-field col m6 s12">
                {#{{ form_label(form.image) }}#}
                <div class="btn">
                <span>Image</span>
                {{ form_errors(form.image) }}
                {{ form_widget(form.image) }}
                </div>
                <div class="file-path-wrapper">
                <input class="file-path validate" type="text" placeholder="pick your cover image here">
                </div>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s6">
                    {{ form_errors(form.release_id) }}
                    {{ form_widget(form.release_id) }}
                    {{ form_label(form.release_id, 'Release') }}
                </div>
            </div>



            <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>

            {#{{ form_end(form) }}#}
            {#{{ form_rest(form) }}#}
        </form>

{% endblock %}
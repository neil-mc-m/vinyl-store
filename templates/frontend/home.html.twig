                                    <a class="waves-effect waves-light"
                                       href="/vinyl/{{ elecRelease.genre }}/release/{{ elecRelease.title|slugify }}/{{ elecRelease.id }}">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}

            <div class="col m4 s12">
                <a href="/vinyl/electronic" class="waves-effect btn">Electronic</a>
            </div>
        </div>

    </div>

    {# the random vinyl section #}

    <div class="row home_sections">
        <div class="col m6 s12 home_sections">
            <div class="col m12 s12">
                <h2 class="flow-text">Random Vinyl</h2>
            </div>
            {% if random_release is defined %}
                {% for random in random_release %}
                    <div class="col m6 s6">
                        <div class="card">

                            <div class="card-image">
                                <img class="activator" src="/uploads/{{ random.image }}" alt="{{ random.title|replace({' ':'_'}) }}_cover">
                            </div>
                            <div class="card-reveal">
                                <span class="card-title white-text">
                                    <i class="material-icons right">close</i>
                                </span>
                                <div class="card-content white-text">
                                    <p>{{ random.artist }}</p>
                                    <p>{{ random.title }}</p>
                                    <p>{{ random.format }}</p>
                                    <p class="hide-on-med-and-down">Media :{{ random.media_condition|upper }}</p>
                                    <p class="hide-on-med-and-down">Sleeve :{{ random.sleeve_condition|upper }}</p>
                                    <p>&euro;{{ random.price }}</p>
                                    <br>
                                    <div class="divider"></div>
                                    <a class="waves-effect waves-light"
                                       href="/vinyl/{{ random.genre }}/release/{{ random.title|slugify }}/{{ random.id }}">Details</a>
                                </div>
                            </div>

                        </div>
                    </div>
                {% endfor %}
            {% endif %}


{% extends 'backend/base.html.twig' %}
{% set active_page = 'search' %}
{% block content %}
    <div class="row">
        <div class="col s12 m12">
            <h5>Search Discogs API for releases</h5>
        </div>
    </div>
    {{ form_start(form) }}
    <div class="row">
        <div class="input-field col m6 s12">
            {{ form_widget(form.catalogue_number) }}
            <i class="material-icons">close</i>
        </div>
    </div>
    <div class="row">
        <div class="input-field col m6 s12">
            {{ form_widget(form.title) }}
            <i class="material-icons">close</i>
        </div>
    </div>
    <div class="row">
        <div class="col s6 m6">
            <button class="btn blue darken-3 waves-effect waves-light" type="submit" name="action">Submit</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
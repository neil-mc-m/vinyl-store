{% extends 'frontend/base.html.twig' %}
{% set active_page = 'home' %}

{% block header %}
    <h1>Vinyl Store</h1>
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col s12 m12">
            <div class="header-image">

            </div>
        </div>
        <div class="divider"></div>
        <div class="section">
            <div class="row center-align">
                <div class="col s12 m12">
                    <h1 class="flow-text">Vinylstore for record enthusiasts</h1>
                </div>
            </div>
        </div>
    </div>

    {#<div class="divider"></div>#}
    <div class="section card-panel">
        <div class="row center-align">

            <h1 class="flow-text">Featured vinyls</h1>
            <div class="col s12 m3">
                <div class="card-panel">

                </div>
            </div>
        </div>
    </div>
    {#<div class="divider"></div>#}
    <div class="section card-panel">
        <div class="row center-align">
            <h1 class="flow-text">New vinyl</h1>

            {% if latest_releases is defined %}
                {% for latest in latest_releases %}
                    <div class="col s6 m3">
                        <div class="card">
                            <div class="card-image">
                                <img src="/uploads/{{ latest.image }}" alt="">
                            </div>
                            <div class="card-content">
                                <strong>{{ latest.artist }}</strong> / <em>{{ latest.title }}</em>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}

        </div>
    </div>
    </div>
    {#<div class="divider"></div>#}
    <div class="section card-panel">
        <div class="row center-align">

            <h2 class="flow-text">Random vinyl</h2>

            {% if random_release is defined %}
                {% for random in random_release %}
                    <div class="col s6 m3">
                        <div class="card">

                            <div class="card-image">
                                <img src="/uploads/{{ random.image }}" alt="">
                            </div>
                            <div class="card-content truncate">
                                <strong>{{ random.artist }}</strong> / <em>{{ random.title }}</em>
                            </div>


                        </div>
                    </div>
                {% endfor %}
            {% endif %}
            <div class="divider"></div>
            <a href="#">Randomize</a>
        </div>
    </div>
{% endblock %}

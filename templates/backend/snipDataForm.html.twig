{% extends 'backend/base.html.twig' %}
{% set active_page = 'create-pricing' %}

{% block content %}
{% set alertTypeAvaillable = [ 'info', 'success', 'warning', 'error'] %}
    {% for alert in alertTypeAvaillable %}
        {% for message in app.session.getFlashBag.get(alert) %}
            <div class="card-panel teal lighten-2">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
        {# pricing info form for adding data fields for snipcart #}
        <form class="container col m6 s12" action="" method="post">
            <h4>Set your data for snipcart here</h4>
            {{ form_errors(form) }}
            <div class="row">
                <div class="input-field col s6">
                    {{ form_errors(form.release_id) }}
                    {{ form_widget(form.release_id) }}
                    {{ form_label(form.release_id) }}
                </div>
            </div>

            <div class="row">
                <div class="input-field col s6">
                    {{ form_errors(form.price) }}
                    {{ form_widget(form.price) }}
                    {{ form_label(form.price) }}
                </div>
            </div>

            <div class="row">
                <div class="input-field col s6">
                    {{ form_errors(form.description) }}
                    {{ form_widget(form.description) }}
                    {{ form_label(form.description) }}
                </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>

        </form>

{% endblock %}

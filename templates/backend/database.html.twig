{% extends 'backend/base.html.twig' %}

{% block content %}
<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Database Manager</span>
        <p>
            There are {{ size }} current tables:
        </p>
        <div class="collection">


             <a href="#" class="collection-item">{{ tables[0] }}<span class="badge orange">{{ count }}</span></a>
             <a href="#" class="collection-item">{{ tables[1] }}</a>

        </div>
        <p>Currently there are {{ count }} items in the vinylstore collection.</p>
      </div>
      <div class="card-action">
        <a href="#">Collection</a>
        <a href="#">Add an item</a>
      </div>
    </div>
  </div>
{% endblock %}

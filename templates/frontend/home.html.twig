        <div class="col m6 s12 home_sections">
            <div class="col m12 s12">
                <h2 class="flow-text">Electronic</h2>
            </div>
            {% if elec_releases is defined %}
                {% for elecRelease in elec_releases|slice(0,2) %}

                    <div class="col m6 s6">
                        <div class="card">
                            <div class="card-image">
                                <img class="activator" src="/uploads/{{ elecRelease.image }}" alt="{{ elecRelease.title }}_cover">
                            </div>
                            <div class="card-reveal">
                                 <span class="card-title white-text">
                                    <i class="material-icons right">close</i>
                                </span>
                                <div class="card-content white-text">
                                    <p>{{ elecRelease.artist }}</p>
                                    <p>{{ elecRelease.title }}</p>
                                    <p>{{ elecRelease.format }}</p>
                                    <p class="hide-on-med-and-down">Media :{{ elecRelease.media_condition }}</p>

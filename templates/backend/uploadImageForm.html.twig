{% extends 'backend/base.html.twig' %}

{% block content %}
    {% if count == 1 %}
        <h5>Well done , images uploaded</h5>
    {% else %}

        {# upload image form #}
        <form enctype="multipart/form-data" class="container col m6 s12" action="" method="post">
            <h4>Upload up to 5 images here</h4>
            {{ form_errors(form) }}
            <div class="row">



                <div class="file-field input-field col m6 s12">
                {#{{ form_label(form.image) }}#}
                <div class="btn">
                <span>Image</span>
                {{ form_errors(form.image) }}
                {{ form_widget(form.image) }}
                </div>
                <div class="file-path-wrapper">
                <input class="file-path validate" type="text" placeholder="Upload up to 5 images">
                </div>
                </div>
            </div>


            <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>

            {#{{ form_end(form) }}#}
            {#{{ form_rest(form) }}#}
        </form>
    {% endif %}
{% endblock %}
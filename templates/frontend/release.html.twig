{% extends 'frontend/base.html.twig' %}
{% set active_page = 'collection' %}
{% block content %}

<div class="spacer"></div>
    <div class="row">

        <div class="container">
            <div class="col s12 m6">
                <div class="card">
                    <div class="card-image">

                        <img src="{{ global.request.basepath }}/uploads/{{ release.image }}">

                        <span class="card-title"></span>
                    </div>
                    <div class="card-content">

                        <p>{{ release.title }}</p>
                        <p>{{ release.artist }}</p>
                        <p>{{ release.genre }}</p>

                    </div>
                    <div class="card-action">
                        <a class="snipcart-add-item waves-effect blue darken-2 btn"
                           data-item-id="{{ release.id }}"
                           data-item-name="{{ release.release_name }}"
                           data-item-price="{{ release.price }}"
                           data-item-url="{{ release.url }}"
                           data-item-description="{{ release.description }}">Cart
                        </a>
                        <a href="/vinyl" class="waves-effect btn-flat">Vinyl</a>
                    </div>
                </div>
            </div>
            <div class="col s12 m6">
                <div class="card-panel white lighten-2">
                    <div class="card-tabs">
                        <ul class="tabs tabs-fixed-width">
                            <li class="tab"><a href="#test1">Title</a></li>
                            <li class="tab"><a href="#test4">Format</a></li>
                            <li class="tab"><a class="active" href="#test5">Notes</a></li>
                            <li class="tab"><a href="#test6">Label</a></li>
                        </ul>
                    </div>
                    <div class="card-content grey lighten-4 tab_content">
                        <div id="test1">{{ release.title }}</div>
                        <div id="test4">{{ release.format }}</div>
                        <div id="test5">{{ release.notes }}</div>
                        <div id="test6">{{ release.label }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

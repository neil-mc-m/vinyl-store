    <div class="spacer"></div>
    <div class="row">
        <div class="col m3 sm6">
            <a href="#" data-activates="slide-out" class="btn button-collapse grey darken-3">Refine</a>
        </div>
    </div>

    <ul id="slide-out" class="side-nav">
        <form action="/refine" method="post">
            <li>
                {{ form_errors(form) }}
            <li>{{ form_label(form.genre, 'genre') }}</li>
            <li><div class="divider"></div></li>
            {{ form_widget(form.genre) }}<br>
            {{ form_errors(form.genre) }}
            </li>
            <p>
                {{ form_label(form.format, 'format') }}
                {{ form_widget(form.format) }}
                {{ form_errors(form.format) }}
            </p>

            <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>


            {{ form_rest(form) }}
        </form>
        <li><i class="material-icons close-menu right-align">close</i></li>
        <li><a class="flow-text">Refine</a></li>
        <li><a class="subheader">Genre</a></li>
        <li><div class="divider"></div></li>
        <li><a href="#!">Rock</a></li>
        <li><a href="#!">Electronic</a></li>
        <li><a href="#">Classic Rock</a></li>
        <li><div class="divider"></div></li>
        <li><a class="subheader">Format</a></li>
        <li><a href="#!">12" Lp</a></li>
        <li><a href="#!">12" Single</a></li>
        <li><a href="#!">7" Single</a></li>
    </ul>


    {#<button class="btn filter-btn">filters</button>#}

    {#<div class="row controls">#}



    {#</div>#}




    <div class="row">
        {% for release in refinedResults %}
            <div class="mix {{ release.genre }} col m3 s6">
                <div class="card z-depth-3">

                    <div class="card-image waves-block waves-light">
                        <img class="activator" src="/uploads/{{ release.image }}" alt="cover art">
                    </div>

                    <div class="card-reveal">
                        <span class="card-title white-text">
                            <i class="material-icons right">close</i>
                        </span>
                        <div class="card-content white-text">
                            {{ release.artist }} /
                            <em>{{ release.title }}</em><br>
                            {#<p>{{ release.format }}</p>#}
                            {#<p>{{ release.label }}</p>#}
                            &euro;{{ release.price }}
                            <div class="divider"></div>
                            <a class="waves-effect waves-light" href="/release/{{ release.id }}">Details</a>
                        </div>
                    </div>

                </div>
            </div>
        {% endfor %}

    </div>
    {#{% include "frontend/partials/pagination.html.twig" %}#}
{% endblock %}

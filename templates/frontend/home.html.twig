{% extends 'frontend/base.html.twig' %}
{% set active_page = 'home' %}

{% block header %}
    <h1>Vinyl Store</h1>
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col s12 m12">
            <div class="header-image">

            </div>
        </div>
        <div class="divider"></div>
        <div class="section">
            <div class="row center-align">
                <div class="col s12 m12">
                    <h1 class="flow-text">Vinylstore for record enthusiasts</h1>
                </div>
            </div>
        </div>
    </div>

    {#<div class="divider"></div>#}
    <div class="container center-align section-headings">
        <h1 class="flow-text">Featured Vinyls.</h1>
    </div>
    <div class="section card-panel">
        <div class="row center-align">


            <div class="col s12 m3">

            </div>
        </div>
    </div>
    {#<div class="divider"></div>#}
    <div class="container center-align section-headings">
    <h1 class="flow-text">New vinyl</h1>
    </div>
    <div class="section card-panel">

        <div class="grid-equalHeight-spaceAround_sm-2">


            {% if latest_releases is defined %}
                {% for latest in latest_releases %}
                    <div class="col">
                        <div class="card">
                            <div class="card-image">
                                <img src="/uploads/{{ latest.image }}" alt="">
                            </div>
                            <div class="card-content">
                                <strong>{{ latest.artist }}</strong> / <em>{{ latest.title }}</em>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}

        </div>
    </div>
    </div>
    {#<div class="divider"></div>#}
    <div class="container center-align section-headings">
        <h1 class="flow-text">Random vinyl</h1>
    </div>
    <div class="section card-panel">
        <div class="grid-equalHeight_sm-2">



            {% if random_release is defined %}
                {% for random in random_release %}
                    <div class="col">
                        <div class="card">

                            <div class="card-image">
                                <img src="/uploads/{{ random.image }}" alt="">
                            </div>
                            <div class="card-content">
                                <strong>{{ random.artist }}</strong> / <em>{{ random.title }}</em>
                            </div>


                        </div>
                    </div>
                {% endfor %}
            {% endif %}


        </div>
    </div>
{% endblock %}

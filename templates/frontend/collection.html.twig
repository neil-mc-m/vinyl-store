{% extends 'frontend/base.html.twig' %}
{% set active_page = 'collection' %}
{% block content %}
<div class="row">
    {% for release in collection %}
    <div class="col s6 m3">
        <div class="card z-depth-3">
            <div class="card-image waves-effect waves-block waves-light hoverable">
                <img class="activator" src="/images/front.png">
            </div>
            <div class="card-content">
                <p>{{ release.artist }}</p>
                <p>{{ release.title }}</p>
                <div class="divider">

                </div>
                <a class="waves-effect waves-light" href="/release/{{ release.id }}">Details</a>
                <a class="snipcart-add-item waves-effect waves-teal btn-flat"
                    data-item-id="2"
                    data-item-name="Bacon"
                    data-item-price="3.00"
                    data-item-weight="20"
                    data-item-url="http://bae81dd9.ngrok.io/collection"
                    data-item-description="Some fresh bacon"><i class="material-icons">shopping_cart</i>
                </a>

            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4"><i class="material-icons right">close</i></span>
                <p>{{ release.format }}</p>
                <p>{{ release.label }}</p>
            </div>





        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}

{% extends 'frontend/base.html.twig' %}
{% set active_page = 'collection' %}
{% block content %}

<div class="spacer"></div>
    <div class="row">

        <div class="container">
            <div class="col s12 m6">
                <div class="card">
                    <div class="card-image">

                        <img src="{{ global.request.basepath }}/uploads/{{ release.image }}">

                        <span class="card-title"></span>
                    </div>
                    <div class="card-content">

                        <p>{{ release.title }}</p>
                        <p>{{ release.artist }}</p>
                        <p>{{ release.genre }}</p>

                    </div>
                    <div class="card-action">
                        <a class="snipcart-add-item waves-effect waves-teal btn"
                           data-item-id="{{ release.id }}"
                           data-item-name="{{ release.release_name }}"
                           data-item-price="{{ release.price }}"
                           data-item-url="{{ release.url }}"
                           data-item-description="{{ release.description }}">Add to cart
                        </a>
                        <a href="/vinyl" class="waves-effect waves-teal btn">Keep Looking</a>
                    </div>
                </div>
            </div>
            <div class="col s12 m6">
                <div class="card-panel teal lighten-2">
                    <p>{{ release.description }}</p>
                    <p>{{ release.format }}</p>
                    <p>{{ release.label }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

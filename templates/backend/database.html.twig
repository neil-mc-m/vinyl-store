{% extends 'backend/base.html.twig' %}

{% block content %}
<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Database Manager</span>
        <p>
            There are {{ size }} current tables:
        </p>
        <div class="collection">
            {% for table in tables %}

                <a href="/admin/view/{{ table }}" class="collection-item">{{ table }}</a>


             {% endfor %}
        </div>

        <p>Currently there are {{ count }} items in the vinylstore collection.</p>
      </div>
      <div class="card-action">
        <a href="#">Add a column</a>
        <a href="#">Inspect table</a>
      </div>
    </div>
  </div>

{% endblock %}

    {# the genre section #}


    <div class="row home_sections">
        <div class="col m6 s12 home_sections">
            <div class="col m12 s12">
                <h2 class="flow-text">Rock</h2>
            </div>
            {% if rock_releases is defined %}
                {% for rockRelease in rock_releases|slice(0,2) %}

                    <div class="col m6 s6">
                        <div class="card">
                            <div class="card-image">
                                <img class="activator" src="/uploads/{{ rockRelease.image }}" alt="{{ rockRelease.title }}_cover">
                            </div>
                            <div class="card-reveal">
                                 <span class="card-title white-text">
                                    <i class="material-icons right">close</i>
                                </span>
                                <div class="card-content white-text">
                                    <p>{{ rockRelease.artist }}</p>
                                    <p>{{ rockRelease.title }}</p>
                                    <p>{{ rockRelease.format }}</p>
                                    <p class="hide-on-med-and-down">Media :{{ rockRelease.media_condition }}</p>
                                    <p class="hide-on-med-and-down">Sleeve :{{ rockRelease.sleeve_condition }}</p>
                                    <p>&euro;{{ rockRelease.price }}</p>
                                    <br>
                                    <div class="divider"></div>
                                    <a class="waves-effect waves-light"
                                       href="/vinyl/{{ rockRelease.genre }}/release/{{ rockRelease.title|slugify }}/{{ rockRelease.id }}">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
            <div class="col m4 s12">
                <a href="/vinyl/rock" class="waves-effect btn">rock</a>
            </div>
        </div>



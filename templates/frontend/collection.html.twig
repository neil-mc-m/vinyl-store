{% extends 'frontend/base.html.twig' %}
{% set active_page = 'vinyl' %}
{% block content %}



    <div class="spacer"></div>
    <div class="row">
        <div class="col m6 s12">


            <a href="#" data-activates="slide-out" class="btn button-collapse grey darken-3">Refine</a>
            <div class="fixed-action-btn toolbar click-to-toggle">
                <a class="btn waves-effect waves-light blue-grey lighten-3">Genres</a>
                <ul class="genre_toolbar">
                    <li><a href="/vinyl/rock" class="btn-floating cyan accent-3 black-text genre_title">Rock</a></li>
                    <li><a href="/vinyl/electronic" class="btn-floating light-green accent-1 black-text genre_title">Electronic</a></li>
                    <li><a href="/vinyl/classic-rock" class="btn-floating orange lighten-1 black-text genre_title">Classic Rock</a></li>
                </ul>
            </div>
        </div>

    </div>

    <ul id="slide-out" class="side-nav">


        <form action="/refine" method="post" id="refineForm">

            <h1 class="flow-text sideNav_title">The Record Box</h1>
            {{ form_errors(form) }}
            {{ form_label(form.genre, 'genre') }}

            <div class="divider"></div>

            {{ form_widget(form.genre) }}
            {{ form_errors(form.genre) }}

            {{ form_label(form.format, 'format') }}
            <div class="divider"></div>
            {{ form_widget(form.format) }}
            {{ form_errors(form.format) }}


            <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>


            {{ form_rest(form) }}
        </form>

    </ul>


    <div class="row">
        {% if results is defined %}
            {% for release in results %}
                <div class="mix {{ release.genre }} col m3 s6">
                    <div class="card z-depth-3">

                        <div class="card-image waves-block waves-light">
                            <img class="activator" src="/uploads/{{ release.image }}" alt="cover art">
                        </div>

                        <div class="card-reveal">
                        <span class="card-title white-text">
                            <i class="material-icons right">close</i>
                        </span>
                            <div class="card-content white-text">
                                {{ release.artist }} /
                                <em>{{ release.title }}</em><br>
                                <p>{{ release.format }}</p>
                                {#<p>{{ release.label }}</p>#}
                                &euro;{{ release.price }}
                                <div class="divider"></div>
                                <a class="waves-effect waves-light" href="/vinyl/{{ release.genre }}/release/{{ release.title|slugify }}/{{ release.id
                                }}">Details</a>
                            </div>
                        </div>

                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
    {% include "frontend/partials/pagination.html.twig" %}
{% endblock %}
